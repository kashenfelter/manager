<html lang="en">
<div class="jumbotron allocated-task-bg">
	<div class="textCenter">
		<h1 class="title-banner">Allocated Tasks</h1>

</div>

<body>

<div class="container tasks-queue">
  <!-- Example row of columns -->
	<div class="row">
    	<div class="col-md-4 op-title-bg-left">
    		<h2 class="op-title">Assigned</h2>
    	</div>
    
	    <div class="col-md-4 op-title-bg-middle">
    		<h2 class="op-title">In Progress</h2>
    	</div> 
    	<div class="col-md-4 op-title-bg-right">
    		<h2 class="op-title">Done</h2>
    	</div>
    	<div class="textColor">
    		<div class="row-2">
    			<div class="col-md-4 op-body-bg-left">
         			<% @todo.each do |oppty|  %>
						<h2><%= link_to oppty.opptyName, oppty %></h2>
  						<p><%= oppty.slComments %></p>
  						<p>
    						<%= link_to "Edit", edit_oppty_path(oppty) %>
   							<%= link_to "Delete", oppty, :data => {:confirm => "Are you sure?"}, :method => :delete %>
   						</p>
  						<hr />
					<% end %>
    			</div>
     			<div class="col-md-4 op-body-bg-middle">
        			<% @doing.each do |oppty|  %>
						<h2><%= link_to oppty.opptyName, oppty %></h2>
  						<p><%= oppty.slComments %></p>
  						<p>
    						<%= link_to "Edit", edit_oppty_path(oppty) %>
   							<%= link_to "Delete", oppty, :data => {:confirm => "Are you sure?"}, :method => :delete %>
   						</p>
  						<hr />
					<% end %>
     			</div>
    			<div class="col-md-4 op-body-bg-right">
        			<% @done.each do |oppty|  %>
						<h2><%= link_to oppty.opptyName, oppty %></h2>
  						<p><%= oppty.slComments %></p>
  						<p>
    						<%= link_to "Edit", edit_oppty_path(oppty) %>
   							<%= link_to "Delete", oppty, :data => {:confirm => "Are you sure?"}, :method => :delete %>
   						</p>
  						<hr />
					<% end %>
    			</div>
    		</div>
		</div>
	</div>
</div>

</body>

</div>
</html>
