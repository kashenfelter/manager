  <script>


    $(document).on("click","a[name='radio-style-btn']", function (e) {
      alert("Inside of radio button onClick function");
      if(document.getElementById('thirty_days_left').checked == true) {
        document.getElementById('thirtyDays').style.display = "block";
        document.getElementById('sixtyDays').style.display = "none";
        document.getElementById('ninetyDays').style.display = "none";
        document.getElementById('allDays').style.display= "none";
      }
      else if(document.getElementById('sixty_days_left').checked) {
        document.getElementById('sixtyDays').style.display = "block";
        document.getElementById('thirtyDays').style.display = "none";
        document.getElementById('ninetyDays').style.display = "none";
        document.getElementById('allDays').style.display= "none";
      }
      else if (document.getElementById('ninety_days_left').checked){
        document.getElementById('ninetyDays').style.display = "block";
        document.getElementById('thirtyDays').style.display = "none";
        document.getElementById('sixtyDays').style.display = "none";
        document.getElementById('allDays').style.display= "none";
      }
      else {
        document.getElementById('allDays').style.display = "block";
        document.getElementById('ninetyDays').style.display = "none";
        document.getElementById('thirtyDays').style.display = "none";
        document.getElementById('sixtyDays').style.display = "none";
      }
    });

    $(document).on("click", "a[name='sort-btn']", function (e) {
      select = document.getElementById('sorting').value;

      if (select == "days")
        window.location.assign("<%= browse_index_path %>" + "?sort=proposalDueDate");
      else if (select == "optName")
        window.location.assign("<%= browse_index_path %>" + "?sort=opptyName");
      else if (select == "optId")
        window.location.assign("<%= browse_index_path %>" + "?sort=opptyId");
      else if (select == "cmanager")
        window.location.assign("<%= browse_index_path %>" + "?sort=captureMgr");
      else if (select == "progmanager")
        window.location.assign("<%= browse_index_path %>" + "?sort=programMgr");
      else if (select == "pmanager")
        window.location.assign("<%= browse_index_path %>" + "?sort=proposalMgr");
      else if (select == "value")
        window.location.assign("<%= browse_index_path %>" + "?sort=value");
    });


    window.onload = function() {
      console.log("Inside function");
      if (document.cookie.indexOf('mycookie')==-1||document.cookie.indexOf('mycookie')==0) {
      	console.log("This is NOT a Refresh");
        // cookie doesn't exist, create it now
        document.cookie = 'mycookie=1';
      }
      else {
      	console.log("This is a Refresh and " + document.cookie.indexOf('mycookie'));
      	// reset cookie
        delete_cookie('mycookie');
        // not first visit, so alert
        location.href = '<%=browse_index_path%>';
      }
    }

    function delete_cookie(name) {
      document.cookie = name + '=-1; expires=Thu, 01 Jan 1970 00:00:01 GMT;';
    }

    $(document).on("click", "input[name='searchButton']", function (e) {
      delete_cookie('mycookie');
    });
  </script> 
