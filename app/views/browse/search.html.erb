                          <option value="optId">Opportunity ID</option>
                          <option value="days">Days Left</option>
                          <option value="cmanager">Capture Managers</option>
                          <option value="progmanager">Program Managers</option>
                          <option value="pmanager">Proposal Managers</option>
                          <option value="value">Value</option>
                        </select>
                        
                        <a href="#" name="sort-btn" class="btn btn-info btn-lg glyphicon selector-button">&#xe092;</a>
                      </div>  
                    </td>
                  </div>
                </tr>


              </table>
              </div>

      </form>   
    </div>    
  <br>
  </div>



