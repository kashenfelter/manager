<h1>Listing histories</h1>

<table>
  <thead>
    <tr>
      <th>Opptyname</th>
      <th>Opptyid</th>
      <th>Oppty</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.opptyName %></td>
        <td><%= history.opptyId %></td>
        <td><%= history.oppty %></td>
        <td><%= history.user %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

