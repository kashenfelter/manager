<p id="notice"><%= notice %></p>

<body>
  <!-- Main component for a primary marketing message or call to action -->
  <div class="jumbotron container" style="padding-left:25px !important; padding-right:25px !important; padding-bottom: 10px !important;">
    <div class="col-md-12" style="padding-bottom:35px !important;">
      <h2 class="op-title"><%= @oppty.opptyName%></h2>
      <div class="col-md-6">  
        <p><b>RFP Date:</b> <%= @oppty.rfpDate%></p>
        <p><b>Proposal Due Date:</b> <%= @oppty.proposalDueDate%></p>
        <p><b>Award Date:</b> <%= @oppty.awardDate%></p>
        <p><b>Submit Date:</b> <%= @oppty.submitDate%></p>
        <p><b>Codename:</b> <%= @oppty.codeName%></p>
        <p><b>IDIQ CA:</b> <%= @oppty.idiqCA%></p>
        <p><b>Status:</b> <%= @oppty.status2%></p>
        <p><b>Value (in Millions of $):</b> <%= @oppty.value%></p>
        <p><b>Percentage Win:</b> <%= @oppty.pWin%></p>
        <p><b>Engaged:</b> <%= @oppty.engaged%></p>
        <p><b>Solution:</b> <%= @oppty.solution%></p>
        <p><b>Estimate:</b> <%= @oppty.estimate%></p>
        <p><b>ED:</b> <%= @oppty.ed%></p>
        <p><b>ON:</b> <%= @oppty.on%></p>
        <p><b>ATE:</b> <%= @oppty.ate%></p>
      </div>  
      <div class="col-md-6">  
        <p><b>Customer Group:</b> <%= @oppty.cgOrg%></p>
        <p><b>SSL Organization:</b> <%= @oppty.sllOrg%></p>
        <p><b>SL Director:</b> <%= @oppty.slDir%></p>
        <p><b>SLL Architect:</b> <%= @oppty.slArch%></p>
        <p><b>Capture Manager:</b> <%= @oppty.captureMgr%></p>
        <p><b>Program Manager:</b> <%= @oppty.programMgr%></p>
        <p><b>Lead Estimator:</b> <%= @oppty.leadEstim%></p>
        <p><b>Technical Lead:</b> <%= @oppty.technicalLead%></p>
        <p><b>Number of Writers Currently Assigned:</b> <%= @numWriters%></p>
        <p class="comment-paragraph"><b>SL Comments:</b> <%= @oppty.slComments%></p>
      </div>  
    </div>
    <div class="btn-container">
      <div <%if session[:role]=="Manager" %>class="col-md-4 manager-col-button"
           <%else%>class="col-md-6 manager-col-button"
           <%end%> 
      >
      <a class="btn btn-lg btn-primary btn-left oppty-btn" href=<%=url_for(:back)%> role="button">Cancel</a>
      </div class="col-md-6 writer-col-button">
      <%if session[:role]=="Writer" %>
        <form method="post" action= "<%=user_oppties_path%>" >
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
            <input name="oppty_id" type="hidden" value="<%= @oppty.id%>">
            <input name="user_id" type="hidden" value="<%= session[:user_id]%>">
            <button class="btn btn-lg btn-primary btn-right" type="submit">Add</button>
        </form>
      <%end%>
      <%if session[:role]=="Manager" %>
        <div class="col-md-4 manager-col-button">
          <a class="btn btn-lg btn-primary btn-center oppty-btn" href=<%= edit_oppty_path(@oppty)%>  role="button" style="color:white">Edit</a>
        </div>
        <div class="col-md-4 manager-col-button">
          <form action =<%= assign_index_path%> method="get" style="min-height:1px">
            <input hidden=true type="hidden" name="opptyId" value=<%= @oppty.id%>>
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
            <button class="btn btn-lg btn-primary btn-right oppty-btn" type="submit" role="button">Assign</button>
          </form>
        </div>  
      <%end%>
    </div>  
  </div>
</body>

