<html lang="en">
  <head>
    <title>Tasks</title>
  </head>

  <body>
    <div class="container tasks-queue">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-3 op-title-bg-left">
          <h2 class="op-title">Assigned</h2>
        </div>
        <div class="col-md-3 op-title-bg-left">
          <h2 class="op-title">To-Do</h2>
        </div>
        <div class="col-md-3 op-title-bg-middle">
          <h2 class="op-title">In Progress</h2>
        </div>
        <div class="col-md-3 op-title-bg-right">
          <h2 class="op-title">Done</h2>
        </div>
        <div class="row-2">
          <div class="col-md-3 op-body-bg-left" id="div1" ondrop="drop(event)" ondragover="allowDrop(event)">
              <% @assigned.each do |o|%>
                <% @current_task=o %>
                <%= render partial: "writer_task" %>
              <% end%>
         </div>
          <div class="col-md-3 op-body-bg-left" id="div2" ondrop="drop(event)" ondragover="allowDrop(event)">
              <% @to_do.each do |o|%>
                <% @current_task=o %>
                <%= render partial: "writer_task" %>
              <% end%>
         </div>
         <div class="col-md-3 op-body-bg-middle" id="div3" ondrop="drop(event)" ondragover="allowDrop(event)">
             <% @doing.each do |o|%>
               <% @current_task=o %>
               <%= render partial: "writer_task" %>
             <% end%>
         </div>
         <div class="col-md-3 op-body-bg-right" id="div4" ondrop="drop(event)" ondragover="allowDrop(event)">
             <% @done.each do |o|%>
               <% @current_task=o %>
               <%= render partial: "writer_task" %>
             <% end%>
         </div>
       </div>
     </div>
    </div>

<style>
  #div1 {backgorund:transparent !important;border:2px solid black;height:292px;width:292px;}
</style>


<script>

function allowDrop(ev) {
    ev.preventDefault();
}

function drag(ev) {
    ev.dataTransfer.setData("text", ev.target.id);
}

function drop(ev) {
    ev.preventDefault();
    var data = ev.dataTransfer.getData("text");
    ev.target.appendChild(document.getElementById(data));
    <% puts document.getElementById(data) %>
    <% puts document.getElementById(data) %>
}
</script>


  </body>
</html>
