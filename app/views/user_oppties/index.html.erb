<h1>Listing user_oppties</h1>

<table>
  <thead>
    <tr>
      <th>Oppty</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_oppties.each do |user_oppty| %>
      <tr>
        <td><%= user_oppty.oppty %></td>
        <td><%= user_oppty.user %></td>
        <td><%= link_to 'Show', user_oppty %></td>
        <td><%= link_to 'Edit', edit_user_oppty_path(user_oppty) %></td>
        <td><%= link_to 'Destroy', user_oppty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

